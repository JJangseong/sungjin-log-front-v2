{
  "compilerOptions": {
    "jsx": "react",
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es2015",
      "es5",
      "dom"
    ],
    "allowJs": true,
    "locale": "ko",
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "keyofStringsOnly": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules/**/*"
  ]
}
